<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="j3.wrenn.new_event"
    android:id="@+id/new_event">

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Name of Event"
        android:ems="10"
        android:id="@+id/event_name"
        android:layout_alignParentTop="true"

        android:layout_alignRight="@+id/event_location"
        android:layout_alignEnd="@+id/event_location"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Location"
        android:ems="10"
        android:id="@+id/event_location"
        android:layout_below="@+id/event_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>
<!--Time Picker-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TIME OF EVENT"
        android:id="@+id/timeText"
        android:layout_below="@+id/event_location"

        android:layout_alignBottom="@+id/event_time"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME"
        android:onClick="testing"

        style="?android:attr/borderlessButtonStyle"

        android:layout_below="@+id/event_location"
        android:layout_alignLeft="@+id/transportation_spinner"
        android:layout_alignStart="@+id/transportation_spinner"
        android:layout_alignRight="@+id/event_location"
        android:layout_alignEnd="@+id/event_location"
        android:layout_marginTop="20dp"/>

<!--Date picker -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DATE OF EVENT"
        android:id="@+id/dateText"
        android:layout_below="@+id/event_time"

        android:layout_above="@+id/transportationText"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:onClick="testing"


        style="?android:attr/borderlessButtonStyle"

        android:layout_below="@+id/event_time"
        android:layout_alignRight="@+id/transportation_spinner"
        android:layout_alignEnd="@+id/transportation_spinner"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />
<!--Transportation mode spinner-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TRANSPORTATION"
        android:id="@+id/transportationText"
        android:layout_below="@+id/event_date"

        android:layout_alignBottom="@+id/transportation_spinner"
        android:layout_marginTop="40dp"/>
    <Spinner
        android:id="@+id/transportation_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/event_date"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />
<!--Notification spinner-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NOTIFICATION"
        android:id="@+id/notificationText"
        android:layout_below="@+id/transportation_spinner"

        android:layout_alignBottom="@+id/notification_spinner"
        android:layout_alignRight="@+id/transportationText"
        android:layout_alignEnd="@+id/transportationText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"/>
    <Spinner
        android:id="@+id/notification_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/transportation_spinner"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/button" />


    <!--<com.gc.materialdesign.views.CheckBox-->
        <!--android:id="@+id/notification_spinner"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#1E88E5"-->
        <!--materialdesign:check="true" />-->


<!--Create event button-->
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create"
        android:background="#1E88E5"
        android:id="@+id/button"
        android:layout_below="@+id/notificationText"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>
